{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build",
            "command": "g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-Wall",
                "-g",
                "*.cpp",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Zadanie wygenerowane przez debuger."
        }
    ],
    "version": "2.0.0"
}
